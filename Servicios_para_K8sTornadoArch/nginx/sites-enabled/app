# configuration of the server
server {
        listen 80;
        server_name example.org;
        charset     utf-8;
        # max upload size

    # Static File
    location /static {
        alias /www/static; # your project's static files - amend as required
        }

    location / {
        proxy_pass http://172.18.0.3:8001/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    
    location /post {
	proxy_pass http://172.18.0.4:8000;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    } 

    location /service3 {
	proxy_pass http://172.18.0.4:8002;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /service4 {
	proxy_pass http://172.18.0.5:8003;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /suma {
	proxy_pass http://172.18.0.6:8004;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
   
    location /resta{
	proxy_pass http://172.18.0.7:8005;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

  }
